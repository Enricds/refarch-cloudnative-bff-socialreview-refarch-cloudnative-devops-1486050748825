{
  "review-microservice": {
    "name": "review-microservice",
    "baseURL": "http://localhost:8080",
    "crud": false,
    "connector": "rest",
    "debug": true,
    "options": {
      "headers": {
        "content-type": "application/json"
      },
      "strictSSL": false
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://localhost:8080/micro/review",
          "options": {
            "strictSSL": false,
            "useQuerystring": true
          },
          "query": {
            "itemId": "{itemId:string}"
          }
        },
        "functions": {
          "find": [
            "itemId"
          ]
        }
      },
      {
        "template": {
          "method": "POST",
          "url": "http://localhost:8080/micro/review",
          "form": {
            "comment": "{comment:string}",
            "itemId": "{itemId}",
            "rating": "{rating}",
            "reviewer_email": "{reviewer_email:string}",
            "reviewer_name": "{reviewer_name:string}",
            "review_date": "{review_date:string}"
          }
        },
        "functions": {
          "save": [
            "comment",
            "itemId",
            "rating",
            "reviewer_email",
            "reviewer_name",
            "review_date"
          ]
        }
      }
    ]
  }
}
