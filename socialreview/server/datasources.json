{
  "review-microservice": {
    "name": "review-microservice",
    "baseURL": "http://socialreviewservice.mybluemix.net/micro/review",
    "crud": false,
    "connector": "rest",
    "debug": true,
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://socialreviewservice.mybluemix.net/micro/review",
          "options": {
            "strictSSL": false,
            "useQuerystring": true
          },
          "query": {
            "itemId": "{itemId:int}"
          }
        },
        "functions": {
          "list": [
            "itemId"
          ]
        }
      },
      {
        "template": {
          "method": "POST",
          "options": {
            "headers": {
              "accept": "application/json",
              "content-type": "application/json"
            },
            "strictSSL": false
          },
          "url": "http://socialreviewservice.mybluemix.net/micro/review",
          "body": {
            "comment": "{comment}",
            "itemId": "{itemId:int}",
            "rating": "{rating:int}",
            "reviewer_email": "{reviewer_email}",
            "reviewer_name": "{reviewer_name}",
            "review_date": "{review_date}"
          }
        },
        "functions": {
          "post": [
            "comment",
            "itemId",
            "rating",
            "reviewer_email",
            "reviewer_name",
            "review_date"
          ]
        }
      }
    ]
  }
}
